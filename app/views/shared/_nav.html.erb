
<nav class="collapse navbar-collapse" role="navigation">
  <% if user_signed_in? then %>
    <ul class="nav navbar-nav">
      <li>
        <%= link_to t(:nav_users), search_path %>
      </li>
    </ul>
  <% end %>
  <ul class="nav navbar-right navbar-nav">
    <% unless user_signed_in? then %>
      <%- if controller_name != 'sessions' %>
        <li>
          <%= link_to t(:nav_login), new_user_session_path %>
        </li>
      <% end %>
      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <li>
          <%= link_to t(:nav_signup), new_user_registration_path %>
        </li>
      <% end %>
    <% else %>
      <li>
        <%= render partial: 'shared/notification' %>
      </li>
      <li>
        <%= link_to t(:nav_account), edit_user_registration_path %>
      </li>
      <li>
        <%= link_to t(:nav_signout), destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
      </li>
    <% end %>
  </ul>
</nav>